@model EmployeeApp.Models.Employee

@{
    ViewData["Title"] = "Delete Employee";
}

<h1>Delete Employee</h1>

<div>
    <h4>Are you sure you want to delete this employee?</h4>
    <div>
        <h5>Employee Details:</h5>
        <dl class="row">
            <dt class="col-sm-2">
                First Name
            </dt>
            <dd class="col-sm-10">
                @Model.FirstName
            </dd>
            <dt class="col-sm-2">
                Last Name
            </dt>
            <dd class="col-sm-10">
                @Model.LastName
            </dd>
            <dt class="col-sm-2">
                Email
            </dt>
            <dd class="col-sm-10">
                @Model.Email
            </dd>
            <dt class="col-sm-2">
                Phone
            </dt>
            <dd class="col-sm-10">
                @Model.Phone
            </dd>
            <dt class="col-sm-2">
                Hire Date
            </dt>
            <dd class="col-sm-10">
                @Model.HireDate.ToString("d")
            </dd>
        </dl>
    </div>

    <form asp-action="DeleteConfirmed">
        <input type="hidden" asp-for="EmployeeID" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>
